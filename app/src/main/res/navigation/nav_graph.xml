<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.diploma.ui.splash.SplashFragment"
        android:label="splashFragment"
        tools:layout="@layout/diploma_fragment_splash">
        <action
            android:id="@+id/action_splash_to_login"
            app:destination="@id/loginFragment"/>
        <action
            android:id="@+id/action_splash_to_container"
            app:destination="@id/containerFragment"/>
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.diploma.ui.login.LoginFragment"
        android:label="loginFragment"
        tools:layout="@layout/diploma_fragment_login">
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment"/>
        <action
            android:id="@+id/action_login_to_container"
            app:destination="@+id/containerFragment"/>
    </fragment>
    <fragment
        android:id="@+id/containerFragment"
        android:name="com.example.diploma.ui.dashboard.ContainerFragment"
        android:label="containerFragment"
        tools:layout="@layout/diploma_container_fragment">
        <action
            android:id="@+id/action_container_to_login"
            app:destination="@+id/loginFragment"/>
        <action
            android:id="@+id/action_container_to_tech"
            app:destination="@id/technologiesFragment"/>
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.diploma.ui.login.RegisterFragment"
        android:label="registerFragment"
        tools:layout="@layout/diploma_fragment_register">
        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/loginFragment"/>
    </fragment>
    <fragment
        android:id="@+id/vacanciesFragment"
        android:name="com.example.diploma.ui.dashboard.vacancies.VacanciesFragment"
        android:label="vacanciesFragment"
        tools:layout="@layout/diploma_fragment_vacancies">
        <action
            android:id="@+id/action_vacancies_to_detail"
            app:destination="@+id/vacancyDetail"/>
    </fragment>
    <fragment
        android:id="@+id/vacancyDetail"
        android:name="com.example.diploma.ui.dashboard.vacancies.VacancyDetailFragment"
        android:label="vacancyDetail"
        tools:layout="@layout/diploma_fragment_vacancy_detail">
        <argument
            android:name="vacancy"
            app:argType="com.example.diploma.data.model.Vacancy"/>
    </fragment>
    <fragment
        android:id="@+id/technologiesFragment"
        android:name="com.example.diploma.ui.dashboard.roadmap.TechFragment"
        android:label="techFragment"
        tools:layout="@layout/diploma_layout_technologies">
    </fragment>

</navigation>