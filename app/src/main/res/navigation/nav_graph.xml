<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.diploma.ui.splash.SplashFragment"
        android:label="splashFragment"
        tools:layout="@layout/diploma_fragment_splash">
        <action
            android:id="@+id/action_splash_to_login"
            app:destination="@id/loginFragment"/>
        <action
            android:id="@+id/action_splash_to_container"
            app:destination="@id/containerFragment"/>
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.diploma.ui.login.LoginFragment"
        android:label="loginFragment"
        tools:layout="@layout/diploma_fragment_login">
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/containerFragment"
        android:name="com.example.diploma.ui.dashboard.ContainerFragment"
        android:label="containerFragment"
        tools:layout="@layout/diploma_container_fragment">

    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.diploma.ui.login.RegisterFragment"
        android:label="registerFragment"
        tools:layout="@layout/diploma_fragment_register">
        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/loginFragment" />
    </fragment>

</navigation>